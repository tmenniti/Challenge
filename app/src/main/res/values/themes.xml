<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Default" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="colorAccent">@color/light_blue</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.Default.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Default.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Default.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TabLayoutAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse" >

        <item name="android:textSize">@dimen/small_margin4</item>
        <item name="android:textColor">@color/light_gray2</item>

    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeWidth">@dimen/zero_dp</item>
        <item name="boxStrokeWidthFocused">@dimen/zero_dp</item>
        <item name="hintTextColor">@color/dark_gray</item>
    </style>

</resources>